{
    "manifest_version" : 2,
    "name" : "DistractionFreeYT",
    "version" : "1.0",

    "description" : "Remove all recommended videos from YouTube pages in order to make YouTube hepful for focused studying",
    "icons" : {
        "48" : "AAAA"
    },
    
    "permissions": [
        "https://www.youtube.com/*"
    ],
        
    "content_scripts": [
        {
            "matches" : ["https://www.youtube.com/*"],
            "js" : ["removeDistractions.js"]
        }
    ]
}